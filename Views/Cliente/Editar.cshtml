@model TrabajoFinalProem_GalanFlorencia.Models.Cliente
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
        ViewData["Title"] = "Editar cliente ";
}
<!--TODO HTML-->
<p class="text-center"> Listado </p>
<div class="card">
    <div class="card-header">
        <h2 class="text-info"> Editar </h2>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Cliente" asp-action="Editar" > 
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

            <!--SE ENVIA CAMPO OCULTO-->
            <input type="hidden" asp-for="codigo" /> 
            <!---->
            <div class="container" style="padding:30px"> 
                <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2">
                            <label asp-for="codigo"> </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="codigo" class="form-control" />
                        </div>
                        <span asp-validation-for="codigo"class="text-danger">  </span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2">
                            <label asp-for="nombre"> </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="nombre" class="form-control" />
                        </div>
                        <span asp-validation-for="nombre"class="text-danger">  </span>
                    </div>
                </div>
             <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2">
                            <label asp-for="direccion"> </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="direccion" class="form-control"/>
                        </div>
                        <span asp-validation-for="direccion" class="text-danger">  </span>
                    </div>
             </div>
              <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2">
                            <label asp-for="extraSaldo"> </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="extraSaldo" class="form-control"/>
                        </div>
                        <span asp-validation-for="extraSaldo" class="text-danger">  </span>
                    </div>
             </div>
             
              <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2 offset-sm-2">
                             <input type="submit" value="Editar" class="btn btn-primary form-control"/>
                        </div>
                         <div class="col-sm-4">
                            <a asp-action="Index" asp-controller="Cliente" class="btn btn-success form-control ">Volver a lista </a>
                        </div>
                     </div>
             </div>
          </div>
        </form>
    </div>
  
</div>