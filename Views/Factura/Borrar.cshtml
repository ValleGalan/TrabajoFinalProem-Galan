@model TrabajoFinalProem_GalanFlorencia.Models.Factura
 
@{
        ViewData["Title"] = "Borrar factura ";
}
<!--TODO HTML-->
<p class="text-center"> Listado </p>
<div class="card">
    <div class="card-header">
        <h2 class="text-info"> Borrar </h2>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Factura" asp-action="Borrar" > 
            <div asp-validation-summary="ModelOnly" class="text-danger"> </div>

            <!--SE ENVIA CAMPO OCULTO-->
            <input type="hidden" asp-for="numero" /> 
            <!---->
            <div class="container" style="padding:30px"> 

                <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2">
                            <label asp-for="numero"> </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="numero" class="form-control"/>  
                        </div>
                        <span asp-validation-for="numero"class="text-danger">  </span>
                    </div>
                </div>
           
             <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2">
                            <label asp-for="FechaCreacion"> </label>
                        </div>
                        <div class="col-sm-6">
                            <input asp-for="FechaCreacion" class="form-control"/>  
                        </div>
                        <span asp-validation-for="FechaCreacion" class="text-danger">  </span>
                    </div>
             </div>
               
               <div class="form-group">
                    <div class="row"> 
                        <div class="col-sm-2 offset-sm-2">
                             <input type="submit" value="Borrar" class="btn btn-primary form-control"/>
                        </div>
                        <div class="col-sm-4">
                            <a asp-action="Index" asp-controller="Factura" class="btn btn-success form-control ">Volver a lista </a>
                        </div>
                     </div>
             </div>
          </div>
        </form>
    </div>
  
 